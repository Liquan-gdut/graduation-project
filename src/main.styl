@import "mixins.styl";

html,body,
h1, h2, h3,
p,
form,
ul,
li,
a {
  margin: 0;
  padding: 0;
  list-style: none;
  border: none;
  font-size:16px;
}

html, body {
  overflow: scroll;
}
a { color:white; text-decoration:none; }
a:hover {
  cursor: pointer;
  color: #fff;
}

#app {
  width: 100%;
  height: 100%;
  min-width: 1300px;
  font-family: Helvetica, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-align: center;
  // color: #2c3e50;
  line-height: 1.5;
  overflow: scroll;
}

