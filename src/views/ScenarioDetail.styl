.container {
  margin-top: 100px;
  padding: 30px 80px;
  background: #09163e;
  color: white;
  text-align: left;
  font-size: 16px;
}

h3 {
  font-size: 24px;
  padding-bottom: 30px;
  border-bottom: 1px solid #222e52;
}

.news-detail{
  line-height: 1.8;
  overflow: hidden;
  color: rgba(255,255,255, 0.7);
}
.news-msg {
  margin-bottom: 20px;
}

.video-wraper{
  width: 640px;
  height: 360px;
  background: black;
  margin: 30px auto;
  position: relative;
}
.video-mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0, 0.6);
  left: 0;
  top: 0;
  z-index: 10;
}
.video {
  &, video {
    width: 100%;
    position: absolute;
    margin: auto;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
  }
  &.play{
    width: 800px;
    height: 600px;
    // position: fixed;
    // z-index: 1;
    // background: black;
  }
  .close {
    color: white;
    background: url(../assets/research/close.png) no-repeat;
    background-size: 100%;
    top: 30px;
    width: 30px;
    height: 30px;
    position: absolute;
    right: 0;
    z-index: 1;
    background-color: rgba(0,0,0,.3);
    border-radius: 50%;
  }
}

.poster{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-size: 100%;
}
.mask{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0, 0.2);
}
.switch{
  position: absolute;
  background: url(../assets/icon/video-play.png);
  background-size: contain;
  width: 50px;
  height: 50px;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  z-index: 11;
}

.title{
  font-size: 24px;
}
