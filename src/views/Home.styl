    section.advantage {
      height: 50rem;
      width: 120rem;
      background-color: #FFF;
      color: #333;

      .content-box {
        width: 66.75rem;
        height: 35.75rem;
        margin: 3.45rem auto 4.87rem auto;
        display: flex;
        flex-wrap: wrap;
        align-content: space-between;

        .col {
          flex-basis: 100%;
