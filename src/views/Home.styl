@import '../mixins.styl';

.title {
  font-family: SourceHanSansCN-Medium;
  font-size: 34px;
  color: #333333;
  text-align: center;
  padding-top: 50px;
}

section.advantage {
  background: #fafafa;
  width: 100%;
  height: 800px;

  .content-box {
    position: relative;
    width: 1200px;
    height: 35.75rem;
    margin: 50px auto;

    .item {
      position: absolute;
    }

    .item1 {
      top: 0;
      left: 0;
    }

    .item2 {
      top: 0;
      right: 0;
    }

    .item3{
      bottom: 0;
      left: 0;
    }

    .item4{
      bottom: 0;
      right: 0;
    }

    .icon {
      height: 106px;
      width: 106px;
      position: relative;
      margin: 0 auto;

      img {
        width: 6.62rem;
        height: 100%;
        margin-left: -3.31rem;
      }

      .icon-01 {
        z-index: 1;
        position: absolute;
        left: 50%;
      }

      .icon-02 {
        z-index: 2;
        position: absolute;
        left: 50%;
      }

      .technology2 {
        width: 85px;
        height: 85px;
        position: relative;
        left: 26px;
        top: 11px;
      }
      .experience2 {
        width: 70px;
        height: 70px;
        position: relative;
        left: 27px;
        top: 17px;
      }
      .brand2 {
        width: 48px;
        height: 90px;
        position: relative;
        left: 27px;
      }
    }

    /* wheel-rotate动画效果 */
    @keyframes wheel-rotate {
      0% {
        transform: rotate(0);
      }

      100% {
        transform: rotate(180deg);
      }
    }

    .icon-technology:hover .technology1 {
      animation: wheel-rotate 0.3s linear 0s alternate;
    }

    /* star-scale动画效果 */
    @keyframes star-scale {
      0% {
        transform: scale(1, 1);
      }

      50% {
        transform: scale(0.5, 0.5);
      }

      100% {
        transform: scale(1, 1);
      }
    }

    .experience2:hover {
      animation: star-scale 0.9s linear 0s alternate;
    }

    /* data动画效果 */
    .data-2 {
      display: none;
    }

    .data:hover .data-1 {
      display: none;
    }

    .data:hover .data-2 {
      display: block;
    }

    /* brand-scale动画效果 */
    @keyframes brand-scale {
      0% {
        top: 0;
        transform: scale(1, 1);
      }

      25% {
        top: 10%;
        transform: scale(0.75, 0.75);
      }

      50% {
        top: 20%;
        transform: scale(0.5, 0.5);
      }

      75% {
        top: 10%;
        transform: scale(0.75, 0.75);
      }

      100% {
        top: 0;
        transform: scale(1, 1);
      }
    }

    .brand2:hover {
      animation: brand-scale 1.1s linear 0s alternate;
    }

    .item-title {
      margin: 1rem auto;
      font-family: SourceHanSansCN-Regular;
      font-size: 1.5rem;
      font-weight: normal;
      color: #4D4D4D;
      letter-spacing: 0.1rem;
    }

    .text {
      font-family: FZLTHK--GBK1-0;
      font-size: 1rem;
      color: #666666;
      letter-spacing: 0 0.5rem;
      line-height: 2rem;
    }
  }
}

section.connect-us {
  position: relative;
  height: 18.75rem;
  width: 100%;
  background: url('../assets/home/home-connect-us.png') no-repeat center 0;
  background-size: 100%;
  letter-spacing: 0.2rem;
  color: #fff;
  z-index: 1;

  .bg-color {
    display: block;
    width: 100%;
    height: 100%;
    background: #4071CE;
    opacity: 0.68;
  }

  .connect-content {
    position: absolute;
    text-align: center;
    left: 50%;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);

    .connect-title {
      font-family:SourceHanSansCN-Medium;
      font-size: 2rem;
    }

    .email {
      font-family:PingFangSC-Regular;
      font-size: 1.5rem;
    }
  }
}