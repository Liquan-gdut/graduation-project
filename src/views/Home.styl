  /*blinking“闪烁”动画效果*/
  @keyframes blinking {
    0%   {opacity: 0.2;}
    100% {opacity: 1;}
  }

  @-moz-keyframes blinking /* Firefox */ {
    0%   {opacity: 0.2;}
    100% {opacity: 1;}
  }

  @-webkit-keyframes blinking /* Safari 和 Chrome */
  {
    0%   {opacity: 0.2;}
    100% {opacity: 1;}
  }

  @-o-keyframes blinking /* Opera */ {
    0%   {opacity: 0.2;}
    100% {opacity: 1;}
  }

    .banner {
      .banner_img{
        position: absolute;
        bottom: 0;
        left: 0;
      }
      .blink {
        animation: blinking 0.7s linear 1s infinite alternate;
        /* Firefox: */
        -moz-animation: blinking 0.7s linear 1s infinite alternate;
        /* Safari 和 Chrome: */
        -webkit-animation: blinking 0.7s linear 1s infinite alternate;
        /* Opera: */
        -o-animation: blinking 0.7s linear 1s infinite alternate;
      }

      .banner-title {
        position: absolute;
        top: 14rem;
        left: 22.5rem;
        text-align: left;

        .headline {
          font-size: 3.5rem;
          font-weight: bold;
        }

        .subtitle {
          line-height: 2rem;
          opacity: 0.7;
        }

        .desc {
          font-size: 18px;
          color: #dedada;
          font-weight: normal;
        }
      }
    }

