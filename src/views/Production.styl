@import '../mixins.styl';

img
  width 100%
  height 100%
  display inline-block

.banner
  height 640px
  margin: 0 auto;
  background-color: #fefefe;
  background: url('../assets/production/product_bg.jpg') no-repeat

.title
  padding-top: 189px;
  text-align: left;
  font-family:PingFangSC-Regular;
  h2
    margin-bottom: 20px;
  p
    font-size:20px;
    line-height:30px;

.tabs{
  text-align: center;
  margin-top: 184px;
  height: 86px;
}
.tab {
  width:600px;
  height:86px;
  position: relative;
  display: inline-block;
  background rgba(36,133,244,0.08)
  text-align: center;
  color #ffffff
  &:hover{
    cursor: pointer;
  }
  &.active{
    background $blue
    // color: #FFFFFF;

  }
  .tab-desc{
    display: inline-block;
    height: 50px;
    $set-center()
    .right{
      float: right;
      text-align: left;
    }
    .icon {
      float: left;
      width: 50px;
      height: 50px;
      background-size: 100%;
      background-repeat: no-repeat;
      margin-right: 15px;
    }
  }
  .nav-title {
    font-size: 20px;
  }
  .nav-subtitle{
    font-size: 14px;
  }
}

.left, .right
  display inline-block
  vertical-align: middle;

.introduction
  text-align left
  // fix inline-block space
  font-size 0

  .left
    width 480px
    margin-right 137px
    font-size 16px
    letter-spacing: 0.5px;
    p
      font-family:PingFangSC-Semibold;
      font-weight:600;
      color:rgba(102,102,102,1);
      line-height:24px;
  .right
    width 583px
    height 460px
    margin-top: 80px;

.system
  margin 0 auto
  padding 52px
.system-img
  display block
  width 100%
  height 594px
  margin-top 30px
  position: relative;
  left: 50px;

.feature-list
  margin 50px auto 94px
  // text-align-last justify
.feature
  display inline-block
  text-align center
  width 200px
  height 200px
  margin-right 93px
  &:last-child
    margin-right 0
  img
    width 86px
    height 86px
    background-color white
  .feature-name
    font-family:SourceHanSansCN-Regular;
    font-size:24px;
    line-height:70px;
  .feature-desc
    font-size:16px;
    font-family:SourceHanSansCN-Normal;
    color:rgba(102,102,102,1);
    line-height:24px;
    width:207px;

.advantages
  width: 100%;
  height: 596px;
  background: linear-gradient(135deg,rgba(37,89,206,1),rgba(16,45,160,1));
  .advantage-list
    position relative
    top: -15px;
    width 305px
    display: inline-block;
    margin-right: 182px;
  .advantage
    display inline-block
    text-align left
    width: 100%
    height 86px
    margin-bottom: 66px;
    .advantage-icon
      width: 86px;
      height: 86px;
      margin-right: 20px;
    .advantage-content
      width: 84px;
      display inline-block
      text-align: left;
      vertical-align: top;
    .advantage-name
      width: 197px;
      font-family:SourceHanSansCN-Regular;
      font-weight:400;
      font-size:24px;
      line-height:36px;
    .advantage-desc
      width:197px;
      font-family:SourceHanSansCN-Normal;
      font-weight:400;
      font-size:16px;
      line-height:24px;
  .advantage-img
      width: 634px;
      height: 428px;
      margin-top: 27px;

.solutions
  margin-bottom: 148px;
.solution-list
  width: 1200px;
  margin-top: 50px;
  .solution
    position relative
    display: inline-block;
    margin-right: 20px;
    vertical-align: middle;
    overflow hidden
    width: 378px;
    height: 358px;
    background-color: #eee;
    &:nth-child(n + 4)
      margin-top: 20px;
    &:hover .visit-more
      top 0px
    &:hover .solution-name
      display: none;

    .solution-name
      width: 100%;
      height: 92px;
      font-family:PingFangSC-Regular;
      font-weight:400;
      line-height: 92px;
      position: absolute;
      bottom: 0;
      text-align: center;
      background:rgba(84,120,218,0.83);
      font-family:PingFangSC-Regular;
      font-size: 24px
      color: white;
    .visit-more
      transition .2s
      display: block;
      position absolute
      top: 358px;
      width: 378px;
      height: 358px;
      background:rgba(84,120,218,0.83);
      text-align: center;
  .visit-more_content
    $set-center()
  .name
    font-family:PingFangSC-Regular;
    font-size:24px;
    line-height:33px;
    margin-bottom: 42px;
  .btn-more
    width:124px;
    height:40px;
    font-family:PingFangSC-Regular;
    line-height: 40px;
    border-radius:4px;
    vertical-align: middle;
    border: 1px solid white;
    &:hover
      background: #4285f4;
      cursor: pointer;
      border: 1px solid $blue;

.paper-list{
  overflow: hidden;
  text-align: justify;
  margin-top: 120px;
}
.paper{
  width: 550px;
  height: 260px;
  display: inline-block;
  margin-bottom: 50px;
}
.paper-left{
  margin-right: 100px;
  float: left;
}

.paper-cover{
  width: 200px;
  height: 260px;
  position: relative;
  overflow: hidden;
  float: left;
  margin-right: 25px;
  border: 6px solid #4285f4;
  opacity: 0.7;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  // background: #4285f4;
  padding: 6px;
  img{
    width: 100%;
    height: 100%;
    background-color: #eee;
  }
}

.paper-type{
  background: url(../assets/research/flag-blue.png) no-repeat;
  background-size: 100%;
  width: 30px;
  padding: 5px;
  height: 77px;
  display: block;
  position: absolute;
  top: 0;
  left: 15px;
  font-size: 16px;
  color: white;
  text-align: center;
  z-index 2
}

.paper-name{
  width:318px;
  font-family:PingFangSC-Semibold;
  font-size: 20px;
  color:rgba(51,51,51,1);
  margin-bottom: 20px;
}

.paper-desc{
  position: relative;
  height: 260px;
  text-align: left;
  overflow: hidden;
}
.paper-tips {
  color:rgba(101,101,101,1);
  font-size: 14px;
  margin-bottom: 8px;
  line-height: 1.5;
}

.btn-paper-detail{
  position: absolute;
  width: 124px;
  height: 40px;
  border:1px solid rgba(66,133,244,1);
  border-radius:4px;
  display: inline-block;
  text-align: center;
  font-size: 18px;
  line-height: 40px;
  bottom: 5px;
  color:rgba(66,133,244,1);
  &:hover {
    background-color:rgba(66,133,244,1);
    color: white;
  }
}