@import '../mixins.styl';

.news {
  width: 100%;
  color: #fff;
}

.news-banner {
  position: relative;
  display: block;
  width: 100%;
  height: 700px;
  background:#eee;
  background: url('../assets/news/news_banner.jpg') no-repeat;
  margin: 0 auto;
}
.banner-bg
  $set-center()

.dots {
  position: absolute;
  width: 1370px;
  height: auto;
  top: 320px;
  left: 50%;
  transform: translateX(-50%);
}

.dot {
  display: inline-block;
  padding: 6px;
  font-size: 40px;
  vertical-align: middle;
  text-align: center;
  background: rgba(255, 255, 255, 0.2);
  cursor: pointer;
  opacity 0.7
}

.dot:hover {
  background: rgba(255, 255, 255, 0.4);
}

.dot.left {
  position: relative;
  float: left;
}

.dot.right {
  position: relative;
  float: right;
}

.news-banner_wrap {
  position: relative;
  width: 1200px;
  height: 700px;
  margin: 0 auto;
  overflow: hidden;
}

.news-nav_box {
  width: 4800px;
  position: absolute;
  top: 152px;
  transition: all 0.3s ease;
}

.sleep {
  transition: none;
  transform: translate3D(0, 0, 0);
}

.news-banner_content {
  // position relative
  display: inline-block;
  float: left;
  width: 1200px;
  .news-desc {
    float left
    overflow: hidden;
    // position: absolute;
    width: 560px;
    height: auto;
    // left: 0;
    // top: 15px;
    text-align: left;
  }
  .banner_title {
    display: inline-block;
    width: 560px;
    vertical-align: top;
    font-family: SourceHanSansCN-Regular;
    font-size: 36px;
    font-weight: normal;
  }
  .banner_subtitle {
    display: inline-block;
    width: 560px;
    vertical-align: top;
    font-family:SourceHanSansCN-Normal;
    font-size: 20px;
    line-height:30px;
    font-weight: normal;
    margin-top: 30px;
  }

  .banner_img {
    // position: absolute;
    // right: 0;
    float: right;
    width: 584px;
    height: 419px;
    background:#eee;
    border: 8px solid #FFFFFF;
  }
}



.news-content {
  position: relative;
  width: 100%;
  height: auto;
  margin-top: 92px;
  color: black;
}

.news-box {
  position: relative; // 注意：此处居中待细究。
  width: 975px;
  left: 50%;
  transform: translateX(-50%);
}

.list-item {
  position: relative;
  height: 285px;
  width: 100%;
  margin-bottom: 35px;

  img {
    width: 380px;
    height: 285px;
    position: absolute;
    left: 0;
    background:#eee;
  }

  .news-word {
    width: 580px;
    margin-left: 30px;
    position: absolute;
    right: -20px;
    top: 15px;
    text-align: left;
  }

  .news-title {
    font-family: SourceHanSansCN-Normal;
    font-size: 24px;
    font-weight: 400;
    color: #2F2F2F;
  }

  .news-title:hover {
    cursor: pointer;
    color: #4285F4;
  }

  .news-subtitle {
    margin-top: 25px;
    font-family: SourceHanSansCN-Normal;
    font-weight: 400;
    color: #666666;
    line-height: 28px;
  }

  .list-date {
    display: inline-block;
    margin-top: 25px;
    font-family: SourceHanSansCN-Normal;
    font-size: 14px;
    color: #999999;
  }
}
.hrLine{
  width: 430px;
  height:1px;
  border:1px solid rgba(222,222,222,1);
  vertical-align:middle;
  display:inline-block;
  background-color: rgba(222,222,222,1);
