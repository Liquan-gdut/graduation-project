@import url("../assets/font/jiantou/iconfont.css");

.employs
  position relative
  width 860px
  margin 0 auto
  margin-top 50px
.job-list
  font-family:SourceHanSansCN-Normal;
  font-weight:400;
  border 1px solid rgba(222,222,222,1)
  margin-bottom 20px
  .job-tip
    position relative
    width 100%
    height 86px
    line-height 86px
    user-select:none;
    cursor pointer
    &:hover
      background-color rgba(250,250,250,1)
    span
      display inline-block
    .job-name
      float: left;
      font-size 20px
      margin-left 30px
    .job-date
      position absolute
      right 130px
      font-size 14px
      font-family:SourceHanSansCN-Regular;
      font-weight:400;
      opacity 0.5
    .job-addr
      float: right;
      font-size 20px
      margin-right 60px
    .tog
      position absolute
      right 30px
  .job-content
    width 740px
    margin 30px auto 50px 30px
    text-align left
    line-height 32px

.activeJob
  background-color rgba(250,250,250,1)
  border-bottom: 1px solid #dedede;

.fade-enter-active, .fade-leave-active {
  transition: opacity .1s;
}
.fade-enter, .fade-leave-to /* .fade-leave-active below version 2.1.8 */ {
  opacity: 0;
}

