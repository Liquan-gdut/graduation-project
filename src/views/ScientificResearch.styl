.content{
  text-align: left;
}
.title{
  color: white;
  margin: 200px 60px;
}
.headline{
  font-size: 53px;
}
.subtitle{
  color: #dedfe2;
  font-size:20px;
}
.tabs{
  text-align: center;
}
.tab {
  color: #FFFFFF;
  position: relative;
  list-style: none;
  display: inline-block;
  width: 600px;
  height: 125px;
  background-color: #09163f;
  background-size: 100%;
  text-align: center;
  &:hover{
    cursor: pointer;
  }
  &.active::before{
    position: absolute;
    width: 0;
    height: 0px;
    border-top: 10px solid #2852ea;
    border-left: 10px solid #050c26;
    border-right: 10px solid #040b26;
    content: '';
    display: inline-block;
    bottom: -10px;
    z-index: 10;
    left: 0;
    right: 0;
    margin: 0 auto;
  }
  .tab-desc{
    display: inline-block;
    margin-top: 40px;
    height: 50px;
    .right{
      float: right;
      text-align: left;
    }
    .icon {
      float: left;
      width: 50px;
      height: 50px;
      background-size: 100%;
      background-repeat: no-repeat;
      margin-right: 15px;
    }
  }
  .nav-title {
    font-size: 21px;
  }
  .nav-subtitle{
    font-size: 12px;
    color: rgba(255,255,255,0.5);
  }
}
.tab-0.active{
  background-image: url("../assets/research/research-project.png");
}
.tab-0 {
  .icon{
    background-image: url('../assets/research/icon-project.png')
  }
}

.tab-1.active{
  background-image: url("../assets/research/research-software.jpg");
}
.tab-1 {
  .icon{
    background-image: url('../assets/research/icon-software.png')
  }
}

.tab-2.active{
  background-image: url("../assets/research/research-paper.jpg");
}
.tab-2 {
  .icon{
    background-image: url('../assets/research/icon-paper.png')
  }
}

.list-item{
  position: relative;
  margin-top: 120px;
  min-height: 300px;
  color: white;
}
.list-item-banner {
  width: 1200px;
  background-size: 100%;
  margin-bottom: 50px;
  overflow: hidden;
  img{
    width: 300px;
    float: left;
  }
  .mask {
    height: 100%;
    width: 850px;
    float: right;
    text-align: left;
    padding-left: 30px;
  }
  .list-item-title {
    font-size: 24px;
  }
  .list-item-sub-title {
    font-size: 20px;
    margin-bottom: 15px;
  }
  .space-around {
    text-align-last: justify;
  }
  .list-item-box {
    text-align-last: left;
    width: 330px;
    display: inline-block;
    vertical-align: top;
    margin-top: 16px;
    margin-right: 60px;
    li{
      margin-right: 20px;
      // padding-left: 55px;
      font-size: 12px;
      color: rgba(255, 255, 255, 0.6);
      height: 60px;
      width: 360px;
      display: inline-block;
      float: left;
      text-align: left;
    }
    img{
      width: 38px;
      height: 38px;
      margin-right: 10px;
      margin-top: 2px;
    }
    span{
      font-size: 14px;
      color: white;
      margin-bottom: 5px;
      display: inline-block;
    }
  }
  .list-item-desc{
    font-size: 14px;
    margin-top: 5px;
  }
}



.paper-list{
  overflow: hidden;
  text-align: justify;
  margin-top: 120px;
}
.paper{
  width: 550px;
  height: 260px;
  display: inline-block;
  margin-bottom: 50px;
}
.paper-left{
  margin-right: 100px;
  float: left;
}

.paper-cover{
  width: 200px;
  height: 260px;
  float: left;
  background: #aeaeae;
  border-radius: 8px;
  margin-right: 25px;
  position: relative;
  overflow: hidden;
  img{
    width: 100%;
    height: 100%;
  }
}

.paper-type{
  background: url(../assets/research/flag-blue.png) no-repeat;
  background-size: 100%;
  width: 30px;
  padding: 5px;
  height: 71px;
  display: block;
  position: absolute;
  top: 0;
  left: 15px;
  font-size: 16px;
  color: white;
  text-align: center;
}

.paper-name{
  font-size: 20px;
  color: white;
  margin-bottom: 20px;
}

.paper-desc{
  position: relative;
  height: 260px;
  text-align: left;
  overflow: hidden;
}
.paper-tips {
  color: #8e8f95;
  font-size: 12px;
  margin-bottom: 8px;
  line-height: 1.5;
}

.btn-paper-detail{
  width: 100px;
  height: 30px;
  border: 1px solid rgba(255,255,255,.3);
  display: inline-block;
  text-align: center;
  line-height: 30px;
  position: absolute;
  bottom: 20px;
  color: white;
}