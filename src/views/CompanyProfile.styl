@import '../mixins.styl';

.company-introduc
  height: auto;
  text-align: left;
  .title
    margin-bottom: 30px;
    font-family:SourceHanSansCN-Medium;
  .introduc
    width: 585px;
    display: inline-block;
    line-height:24px;
    font-family:SourceHanSansCN-Normal;
    font-weight:400;
    color:rgba(0,0,0,0.72);
  .play-video
    display: inline-block;
    width: 540px;
    height: 370px;
    position: absolute;
    top:210px;
    right: 0;
    background:rgba(216,216,216,1);

  .short-video
    width: 100%
    height: 100%
  .play-tog
    display: none;
    width: 100px;
    position: absolute;
    top: 50%;
    right: 220px;
    transform: translateY(-50%);
    z-index: 3;
    cursor pointer

.play-video:hover > .play-tog
  display: block;
.play-video:hover > .hover-bg
  position: absolute
  top: 0;
  width: 100%
  height: 100%
  background-color:rgba(0,0,0,.5);

full()
  top 0
  bottom 0
  left 0
  right 0

.mask
  full()
  position fixed
  background rgba(0,0,0,.6)
  z-index 20

  .video-port
    position absolute
    width 61.8%
    $set-center()
    .long-video
      width 100%
  .close-tog
    display none
    position absolute
    top 0
    right 0
    cursor pointer
  .video-port:hover > .close-tog
    display block

.box
  width: 100%
  height auto
  background:rgba(64,97,174,1);
.culture
  position relative
  margin-top: 50px;
  text-align: left;
  height 514px
.cul-img
  display: inline-block;
  background url("../assets/aboutus/about-us_bottom.png");
  background-size: auto 100%;
  background-position: right;
  width 50%
  height: 100%
  vertical-align: top
  margin-right: 122px

.cul-title
  font-family:SourceHanSansCN-Medium;
  font-size:24px;
  font-weight:500;
  line-height:36px;
  margin-bottom 20px
.curl-desc
  font-family:SourceHanSansCN-Normal;
  font-size:20px;
  line-height:29px;

.cul-introduc
  margin-bottom 50px
.cul-content
  width: 50%;
  position: absolute;
  top: 57%;
  margin: auto;
  right: -122px;
  transform: translateY(-50%);

