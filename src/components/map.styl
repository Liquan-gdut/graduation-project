@import "../mixins.styl";

.map-container
  // background #F7F8FA
  margin 0 auto
  position relative
  padding-bottom 50px
  width 700px
  height 600px
.tips-box
  width 223px
  height auto
  box-sizing border-box
  padding 30px
  background: rgba(66,133,244,0.95);
  border: 1px solid #4E89E0;
  border-radius: 4px;
  font-size 14px
  position absolute
  transition display .3s
  text-align left
  z-index: 10
  &.box-hidden
    display none
    width 0
    height 0
    padding 0
  .triangle
    width: 0;
    height: 0;
    border-top: 10px solid transparent;
    border-bottom: 10px solid transparent;
    border-right: 10px solid rgba(66,133,244,0.95);
    left: -10px;
    position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;

.tips-title
  font-family: SourceHanSansCN-Medium;
  font-size: 20px;
  color: #FFFFFF;
  margin-bottom: 20px;
.tips-content
  font-family: SourceHanSansCN-Normal;
  font-size: 16px;
  color: #FFFFFF;
  text-align: left;

svg.map
  width 100%
  height 100%
  margin 0 auto 30px
  path
    stroke: white;
    stroke-width 1
    fill #EEEEEE
    // &.active
    //   fill #4285F4
    //   opacity .38
  text
    fill #000
    font-size 10px
    // text-anchor middle
    user-select none
    z-index 10

.types-list
  color: #333333;
  position absolute
  bottom: 40px;
  margin: 0 auto;
  left: 0;
  right: 0;
  margin-top: 30px;
  .type
    user-select none
    line-height 20px
    font-size: 16px;
    margin-right: 50px;
    display: inline-block;
    &:last-child
      margin-right 0
    img
      display inline-block
      margin auto 8px
    .type-name
      position: relative;
      bottom: 3px;
